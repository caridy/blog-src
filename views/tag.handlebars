<div class="content pure-u-1">
    <h1 class="pure-u-1"><a href="/blog/archives/">Archives</a> tagged with <i>"{{tag}}"</i></h1>
    {{#articles}}
        <div class="pure-g-r l-sep" id="archives">
            <div class="pure-u-2-3"><a href="{{path}}">{{title}}</a></div>
            <div class="pure-u-1-3 l-right">{{formatted_date}}</div>
        </div>
    {{/articles}}
</div>
<div class="pure-g-r meta">
    <div class="date">
        <a href="/blog/archives/">More Articles</a>
    </div>
</div>
